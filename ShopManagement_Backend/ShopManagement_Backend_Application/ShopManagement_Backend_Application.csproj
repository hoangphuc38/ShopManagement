      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ShopDetailMessages.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\Messages\ShopMessages.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ShopMessages.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\Messages\UserMessages.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>UserMessages.Designer.cs</LastGenOutput>
