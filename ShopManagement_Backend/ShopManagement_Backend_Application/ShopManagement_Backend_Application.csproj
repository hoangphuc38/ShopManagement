  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ShopManagement_Backend_Core\ShopManagement_Backend_Core.csproj" />
    <ProjectReference Include="..\ShopManagement_Backend_DataAccess\ShopManagement_Backend_DataAccess.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\Messages\AccountMessages.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>AccountMessages.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\Messages\NotificationMessages.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>NotificationMessages.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\Messages\ProductMessages.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ProductMessages.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\Messages\ShopDetailMessages.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ShopDetailMessages.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\Messages\ShopMessages.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ShopMessages.resx</DependentUpon>
